    <%
        if(user.isVip) {
            var str = 'Bạn đang là Vip, Ngày hết hạn : ' + user.vipExpires;
        } else {
            var str = 'Bạn chưa phải Vip';
        }
    %>

    <li><a href="javascript:void(0)" title=" <%= str %>" data-toggle="tooltip" data-placement="right"><i class="fa fa-star"></i></a> </li>
