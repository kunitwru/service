<!DOCTYPE html>
<html>
<head>
    <title>Đăng ký thành viên</title>
    <!--Custom Theme files-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--web-fonts-->
    <link href='//fonts.googleapis.com/css?family=Jura:400,300,500,600' rel='stylesheet' type='text/css'>
    <!--//web-fonts-->
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>
<!-- main -->
<div class="main">
    <!--login-profile-->
    <div class="agile">
        <div class="signin-form profile">
            <h3>Đăng ký</h3>
            <div class="login-form">
                <div>
                    <% if (errors && errors.length > 0) { %>
                    <ul class="error-message">
                        <% errors.forEach(function(error){ %>
                        <li><%= error.msg %></li>
                        <% }); %>
                    </ul>
                    <% } %>
                </div>
                <form action="/signup" method="post">
                    <input type="text" name="email" placeholder="E-mail" required="" value="<%= (typeof params == 'object') ? params.email : '' %>" >
                    <input type="text" name="username" placeholder="Tên của bạn" required="" value="<%= (typeof params == 'object') ? params.username : '' %>">
                    <input type="text" name="website" placeholder="Website" required="" value="<%= (typeof params == 'object') ? params.website : '' %>">
                    <input type="password" name="password" placeholder="Mật khẩu" required="" value="<%= (typeof params == 'object') ? params.password : '' %>">
                    <input type="password" name="passwordConf" placeholder="Xác nhận mật khẩu" required="" value="<%= (typeof params == 'object') ? params.passwordConf : '' %>">
                    <center>
                        <div class="g-recaptcha" data-sitekey="6LcvUA4TAAAAAJJd5Srm3dx_1fQ9NzooiZO-6BFL"></div>
                    </center>

                    <input type="submit" value="Đăng ký">
                </form>
                <br />
                <a href="/login" class="formLinks">Đăng nhập</a>
            </div>
        </div>
    </div>
    <!--//signin-form-->
</div>
</body>
</html>
