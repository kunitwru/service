<!DOCTYPE html>
<html>
<head>
    <title>Chỉnh sửa nội dung Home</title>
    <!--Custom Theme files-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <!--web-fonts-->
    <link href='//fonts.googleapis.com/css?family=Jura:400,300,500,600' rel='stylesheet' type='text/css'>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="//cdn.ckeditor.com/4.10.1/standard/ckeditor.js"></script>
    <!--//web-fonts-->
</head>
<body>
<div class="container">
    <%- include('../elements/header'); %>
    <h2>Cập nhật nội dung phần Home</h2>
    <div class="container">
        <form action="/menu/save/home" method="POST" id="changeMenuHome" style="width: 100%">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" class="form-control"
                               value="<%= home !== null ? home.title : '' %>" id="title"
                               placeholder="Please enter title" required>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="content">Nội dung</label>
                        <textarea name="contents" class="form-control ckeditor" maxlength="250" rows="3" id="content" required><%= home !== null ? home.content : '' %></textarea>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <div class="btn-group">
                        <input id="update" class="btn btn-primary btn-sm" value="Cập nhật" type="submit">
                        <input class="btn btn-warning btn-sm" value="Hủy bỏ" type="reset">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>
