<!DOCTYPE html>
<html>
<head>
    <title>Danh sách các thành viên</title>
    <!--Custom Theme files-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <!--web-fonts-->
    <link href='//fonts.googleapis.com/css?family=Jura:400,300,500,600' rel='stylesheet' type='text/css'>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <!--//web-fonts-->
</head>
<body>
<div class="container">
    <%- include('../elements/header'); %>
    <h2>Danh sách thành viên</h2>
    <table class="table table-border">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Room ID</th>
            <th scope="col">Status</th>
            <th scope="col">Ngày kết nối</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <% var dem = 0; %>
        <% rooms.forEach(function(room){ %>
        <% dem++; %>
        <tr>
            <td><%= dem %></td>
            <td><%= room.yourname %></td>
            <td><%= room.user_id %></td>
            <td><%- (room.status) ? '<i class="fa fa-commenting"></i>' : '<i class="fa fa-comment"></i>' %></td>
            <td><%= room.created %></td>
            <td>

            </td>
        </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Code Nhúng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(".btn-info").click(function(){
        $("#exampleModal").modal();
        var codenhung = '<div data-user-id="'+ $(this).attr('code') +'" id="chat-main-boot"></div>';
        codenhung +='<script src="http://uhthi.com:3000/main.js">';
        codenhung += '<\/script>';
        $("#exampleModal .modal-title").text($(this).attr('title'));
        $("#exampleModal .modal-body").text(codenhung);
    });
    $('.btn-delete').click(function(){
        var id = $(this).attr("id");
        $.ajax({
            type:'DELETE',
            url : '/users/delete',
            data : {
                _id : id
            },
            success(data) {
                location.href = "/";
            }
        })
    })
</script>
</body>
</html>
